# Environment configuration for GPT-OSS-20B AI Agent
# Copy this file to .env and fill in your values

# Model Configuration
MODEL_URL=http://host.docker.internal:12434/engines/llama.cpp/v1
MODEL_NAME=ai/gpt-oss-20b
REASONING_LEVEL=medium

# MCP Gateway Configuration
MCP_GATEWAY_URL=http://localhost:3000

# API Keys for MCP Tools (optional but recommended)
# Get your API keys from respective services

# Brave Search API (for web search)
BRAVE_API_KEY=your_brave_api_key_here

# GitHub API (for repository access)
GITHUB_TOKEN=your_github_token_here

# OpenWeather API (for weather information)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Database Configuration
REDIS_URL=redis://localhost:6379
CHROMA_URL=http://localhost:8002

# Application Configuration
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO
DEBUG=false

# Docker Model Runner Configuration
DMR_HOST=host.docker.internal
DMR_PORT=12434

# Agent System Configuration
MAX_TOKENS=2000
TEMPERATURE=0.7
MAX_AGENTS=10
AGENT_TIMEOUT=300

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Production Configuration (uncomment for production)
# ENVIRONMENT=production
# LOG_LEVEL=WARN
# DEBUG=false
# SECURE_COOKIES=true
